---
import ArticleHeader from "../components/ArticleHeader.astro";
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  frontmatter: {
    title: string;
    pubDate: Date;
    conferenceName: string;
    conferenceLocation: string;
    conferenceLink: string;
    conferenceLogo: string;
    youTubeVideoId?: string | undefined;
    slidesLink?: string | undefined;
  };
}

const {
  frontmatter: { title, pubDate, youTubeVideoId },
} = Astro.props as Props;
---

<BaseLayout title={title} description={title}>
  <main class="max-w-6xl mx-auto px-8">
    <article
      class="prose prose-invert prose-xl max-w-none prose-h2:text-brand prose-img:rounded-lg prose-p:text-white"
    >
      <ArticleHeader
        title={title}
        date={pubDate}
        youTubeVideoId={youTubeVideoId}
      />
      <slot />
    </article>
  </main>
</BaseLayout>

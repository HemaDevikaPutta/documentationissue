---
export interface Props {
  href: string;
  text: string;
  classStr?: string;
  isFancy?: boolean;
}
const { href, text, classStr = "", isFancy = true } = Astro.props;
---

<a
  class={`group transition-all duration-300 ease-in-out relative cursor-pointer ${classStr} pl-1 ${
    isFancy ? "hover:text-bg" : "hover:text-brand"
  } z-20`}
  href={href}
  rel="noopener noreferrer"
  target="_blank"
>
  {text}{
    isFancy && (
      <span class="absolute left-0 -bottom-0 w-full h-0.5 bg-brand -z-10 group-hover:h-full group-hover:transition-all rounded-sm" />
    )
  }
</a>
